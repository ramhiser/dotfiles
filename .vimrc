syntax on          " Syntax highlighting

set autoindent     " Use indent from previous line
"set smarttab       " Smart handling of the tab key
set expandtab      " Use spaces for tabs
"set shiftround     " Round indent to multiple of shiftwidth
set shiftwidth=2   " Number of spaces for each indent
set softtabstop=2  " Number of spaces for tab key
set textwidth=80   " Column width

set nocompatible   " Allow for scrolling with trackpad on MacBook (mouse wheel?)
set mouse=a        " Sets cursor to clicked area

set clipboard=unnamed " Allows VIM to share the clipboard with Mac OS X
